@model PersonelModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Sirket.styles.css" asp-append-version="true" />
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş Yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Kullanıcı Adınız</label>
                        <input type="text" class="form-control" asp-for="@Model.KullaniciAdi"  placeholder="" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifreniz</label>
                        <input type="password" class="form-control" asp-for="@Model.Password"  placeholder="" required="">
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</section>