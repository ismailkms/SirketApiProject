@model List<SirketModel>
@{
    ViewData["Title"] = "Sirket";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sirketler</h4>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Sirket Adı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SirketAdi</td>
                                <td>
                                    <a href="/Sirket/UpdateSirket/@item.Id" class="btn btn-xs btn-outline btn-warning">Düzenle</a>
                                    <a href="/Sirket/DeleteSirket/@item.Id" class="btn btn-xs btn-outline btn-danger">Sil</a>
                                       
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a href="/Sirket/AddSirket" class="btn btn-xs btn-outline btn-info">Sirket Ekle</a>
            </div>
        </div>
    </div>
</div>
